<!-- Eliminar cualquier etiqueta <html> o <body> duplicada -->
<header class="bg-primary text-white text-center py-3">
    <a href="/" class="text-white text-decoration-none">
        <h1 class="h3">JOBFINDER</h1>
    </a>
</header>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="nav-link" asp-controller="Auth" asp-action="Logout">Cerrar Sesión</a>
            @if (User.IsInRole("Empresa"))
            {
                <a class="nav-link" asp-controller="Ofertas" asp-action="Crear">Crear Oferta</a>
            }
        }
        else
        {
            <a class="nav-link" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
            <a class="nav-link" asp-controller="Auth" asp-action="Register">Registro</a>
        }
        <a class="nav-link" href="/">Inicio</a>
    </div>
</nav>